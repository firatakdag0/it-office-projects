{
    "name": "it-office",
    "private": true,
    "description": "IT Office Management System - Monorepo",
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "frontend:dev": "npm run dev --workspace=frontend",
        "frontend:build": "npm run build --workspace=frontend",
        "frontend:start": "npm run start --workspace=frontend",
        "backend:install": "cd backend && composer install"
    }
}